{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 29,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "release",
      "displayName": "Release toolchain",
      "hidden": false,
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
        "CMAKE_TOOLCHAIN_FILE": "/opt/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "CMAKE_BUILD_TYPE": "Release",
        "VCPKG_INSTALLED_DIR": "/opt/vcpkg/installed",
        "VCPKG_MANIFEST_INSTALL": "OFF"
      },
      "binaryDir": "build/release"
    },
    {
      "name": "setup",
      "displayName": "Setup toolchain",
      "hidden": false,
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "/opt/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_INSTALLED_DIR": "/opt/vcpkg/installed",
        "VCPKG_MANIFEST_MODE": "ON"
      },
      "binaryDir": "build/setup"
    },
    {
      "name": "debug",
      "displayName": "Debug toolchain",
      "hidden": false,
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "/opt/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "CMAKE_BUILD_TYPE": "Debug",
        "VCPKG_MANIFEST_MODE": "OFF",
        "CMAKE_CXX_COMPILER": "/usr/bin/clang++"
      },
      "binaryDir": "build/debug"
    }
  ],
  "buildPresets": [
    {
      "name": "release",
      "configurePreset": "release",
      "configuration": "Release"
    },
    {
      "name": "debug",
      "configurePreset": "debug",
      "configuration": "Debug"
    }
  ],
  "testPresets": [
    {
      "name": "release",
      "configurePreset": "release",
      "configuration": "Release",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "debug",
      "configurePreset": "debug",
      "configuration": "Debug",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}